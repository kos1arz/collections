{% extends 'base.html.twig' %}
{% block title %}Szkolenia
{% endblock %}
{%block
headerBaner %}
	{% include 'training/list/headerBaner.html.twig' %}
{%endblock %}
{% block content %}

	<div class="container" style="margin-top: 50px">
		<div class="row">
			<div class="col-12 col-lg-3" style="margin-bottom: 15px">
				<p>Wybierz szkolenie</p>
				{%
                    include 'components/select_dropdown_with_search.html.twig'
                    with {
                        class: "training",
                        name: 'training',
                        options: {
                            '1': 'INSTRUKTOR',
                            '2': 'SEDZIA',
                            '3': 'TRENER',
                        },
                        placeholder: 'WSZYSTKIE SZKOLENIA'
                    }
                %}
			</div>

			<div class="col-12 col-lg-3" style="margin-bottom: 15px">
				<p>Miesiąc</p>
				<input type="text" class="main-date-picker month-picker" placeholder="WYBIERZ MIESIĄC"/>
			</div>

			<div class="col-12 col-lg-3" style="margin-bottom: 15px">
				<p>Wybierz Państwo</p>
				{%
                    include 'components/select_dropdown_with_search.html.twig'
                    with {
                        class: "training",
                        name: 'training',
                        options: {
                            '1': 'POLSKA',
                            '2': 'NIEMCY',
                            '3': 'WIELKA BRYTANIA',
                        },
                        placeholder: 'WSZYSTKIE PAŃSTWA'
                    }
                %}
			</div>

			<div class="col-12 col-lg-3" style="margin-bottom: 15px">
				<p>Wybierz miasto</p>
				{%
                    include 'components/select_dropdown_with_search.html.twig'
                    with {
                        class: "training",
                        name: 'training',
                        options: {
                            '1': 'WARSZAWA',
                            '2': 'POZNAŃ',
                            '3': 'SIEMIANOWICE ŚLĄSKIE',
                        },
                        placeholder: 'WSZYSTKIE MIASTA'
                    }
                %}
			</div>

			<div class="col-12 col-lg-4 offset-lg-4" style="margin-top: 15px">
				<a href="#" class="blue-button d-flex justify-content-center">SZUKAJ SZKOLENIA</a>
			</div>
		</div>
	</div>

	<div class="container" style="margin-top: 50px">
		<div class="row">
			<div class="col-12 col-lg-6">
				<h2>Lista szkoleń (23)</h2>
			</div>

			<div class="col-12 col-lg-3 offset-lg-3">
				<select class="option-drop-down">
					<option value="">SORTUJ PO NAJNOWSZYCH</option>
					<option value="1">SORTUJ PO NAJNOWSZYCH</option>
					<option value="2">SORTUJ PO NAJNOWSZYCH</option>
					<option value="3">SORTUJ PO NAJNOWSZYCH</option>
				</select>
			</div>
		</div>
	</div>

	<div class="container">
		<div class="row">
            {% for course in pagination %}
                <div class="col-10 offset-1 col-sm-6 offset-sm-0 col-lg-3 p-lf-8 tm-15">
                    <div class="row nomarg">
                        <div class="news-card">
                            <div class="col-12 nopad">
                                <div class="news-card-image-tags">
                                    <div class="news-card-image-tag1">Instruktor</div>

                                    <div class="news-card-image-tag2">Promocja</div>
                                </div>

                                <img class="card-img" src="{{ asset('build/images/img-1.png') }}"/>
                            </div>

                            <div class="col-12">
                                <h3>{{ course.name }}</h3>
                                <p>
                                    Zostań instruktorem najdynamiczniej rozwijającej się
                                                                                                                                                                                                                                aktywności na świecie.
                                </p>
                            </div>

                            <div class="col-12">
                                <p class="card-map-pin">Kraków</p>
                                <p class="card-clock">17 Grudnia 2023, 8:00</p>
                            </div>

                            <div class="col-12">
                                <p class="price float-left">
                                    {{ course.price }} zł {% if course.promotionalPrice %}<span class="price-low">{{ course.promotionalPrice }} zł</span>{% endif %}
                                </p>
                                <a href="{{ path('training_details', {'id': course.id}) }}" class="blue-button float-right">KUP SZKOLENIE</a>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
		</div>
	</div>

	<div class="container">
		<div class="row">
			<div class="col-12">
				<div class="row">
					<div class="col-12 col-lg-6 d-flex justify-content-start">
                        <div class="pagination">
                            Pokaż na stronie:
                            <span aria-current="page" class="page-numbers current">{{ itemsPerPage }}</span>
                            <a class="page-numbers {{ itemsPerPage == 1 ? 'd-none' :'' }}" href="{{ path('training_list', { 'items': 1, 'page': 1 }) }}">1</a>
                            <a class="page-numbers {{ itemsPerPage == 2 ? 'd-none' :'' }}" href="{{ path('training_list', { 'items': 2, 'page': 1 }) }}">2</a>
                            <a class="page-numbers {{ itemsPerPage == 3 ? 'd-none' :'' }}" href="{{ path('training_list', { 'items': 3, 'page': 1 }) }}">3</a>
                        </div>
					</div>

                    <div class="col-12 col-lg-6 d-flex justify-content-end">
                        <div class="pagination">
                            {# Poprzednia strona #}
                            {% if pagination.currentPageNumber > 1 %}
                                <a class="prev page-numbers" href="{{ path('training_list', {'page': pagination.currentPageNumber - 1, 'items': itemsPerPage }) }}">« Poprzednie</a>
                            {% endif %}
                            {# Wszystkie strony #}
                            {% for page in 1..pagination.pageCount %}
                                {% if page == pagination.currentPageNumber %}
                                    <span aria-current="page" class="page-numbers current">{{ page }}</span>
                                {% else %}
                                    <a class="page-numbers" href="{{ path('training_list', {'page': page, 'items': itemsPerPage }) }}">{{ page }}</a>
                                {% endif %}
                            {% endfor %}

                            {# Następna strona #}
                            {% if pagination.currentPageNumber < pagination.pageCount %}
                                <a class="next page-numbers" href="{{ path('training_list', {'page': pagination.currentPageNumber + 1, 'items': itemsPerPage }) }}">Następne »</a>
                            {% endif %}
                        </div>
                    </div>
				</div>
			</div>
		</div>
	</div>

{% endblock %}
